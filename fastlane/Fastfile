
# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)


# ç¼–è¯‘æ‰“åŒ…
platform :ios do
  desc 'Release new pod version'
  lane :release_pod do |options|

    target_repo    = options[:repo]
    target_project = options[:project]
    target_version = options[:version]
    target_desc    = options[:desc]
    target_source  = options[:source]
    spec_path      = "#{target_project}.podspec"

    # git pull
    git_pull

    # ç¡®è®¤æ˜¯ master åˆ†æ”¯
#     ensure_git_branch(branch: 'dev')

    source = ['https://github.com/CocoaPods/Specs']

    if target_source.nil? || target_source.empty?
    else
        source.concat(target_source)
    end


    # å…ˆéªŒè¯ spec æ–‡ä»¶
    pod_lib_lint(
    use_bundle_exec: false, allow_warnings: true, verbose: true, no_clean: false, skip_import_validation: true, sources:source)
    UI.message("pod lib #{target_project} version #{target_version} Successfully! ğŸ‰ ")

    # ä¿®æ”¹ spec ä¸ºå³å°†å‘å¸ƒçš„ç‰ˆæœ¬
    if target_version.nil?
        target_version = version_bump_podspec(path: spec_path, bump_type: "patch")
    else
        version_bump_podspec(path: spec_path, version_number: target_version)
    end

    UI.message("ğŸ‘‰ Start release lib #{target_project} version #{target_version}")

    # æäº¤ä»£ç åˆ°è¿œç¨‹ä»“åº“
    git_add(path: '.')

    if target_desc.nil? || target_desc.empty?
        git_commit(path: '.', message: "docs: release #{target_version}")
    else
        git_commit(path: '.', message: target_desc)
    end

    push_to_git_remote

    # æ£€æŸ¥å¯¹äº tag æ˜¯å¦å·²ç»å­˜åœ¨
    if git_tag_exists(tag: target_version)
        # åˆ é™¤å¯¹åº” tag
        UI.message("Tag #{target_version} already exists, then, delete it! ğŸ’¥")
        remove_git_tag(tag: target_version)
    end

    # æ·»åŠ  tag
    add_git_tag(tag: target_version)

    # æäº¤ tag
    push_git_tags

    # pod repo push 'target_repo' 'spec_path'
    pod_push(path: spec_path, use_bundle_exec: false, repo: target_repo, allow_warnings: true, verbose:true, skip_import_validation: true)
    UI.message("Release lib #{target_project} version #{target_version} to repo #{target_repo} Successfully! ğŸ‰ ")
  end
end





